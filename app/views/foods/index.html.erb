<p style="color: green"><%= notice %></p>

<div class="food-header flex-row"> 
  <h1 class="section-title">Foods</h1>
  <%= link_to "New food", new_food_path, class: "add-food-btn" %>
</div>

<table class="table-container">
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <%= render food %>
    <% end %>
  </tbody>
</table>
