<p style="color: green"><%= notice %></p>

<div class="food-header"> 
  <h1>Foods</h1>
  <%= link_to "New food", new_food_path, class: "Add-food-btn" %>
<div/>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <%= render food %>
    <% end %>
  </tbody>
</table>
