<h1>General Shopping List</h1>


<% needs = calculate_total_items(@recipe_foods) %>

<% needs.each do |element, quantity| %>
  <h2><%= element %>: <%= quantity %></h2>
<% end %>

<hr>
<% array = calculate_food_totals(@foods) %>
<% inventory = array[0] %>

<% inventory.each do |element, quantity| %>
  <h2><%= element %>: <%= quantity %> <%= array[1][element] %></h2>
<% end %>

<hr>
<% calculate_totals_needed(inventory, needs).each do |element, quantity| %>
  <h2><%= element %>: <%= quantity %></h2>
<% end %>